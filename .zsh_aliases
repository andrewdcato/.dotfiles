function ac(){
  git add .
  git commit -m "$1"
}

function acp(){
  git add .
  git commit -m "$1"
  git push
}

function develop-merge-conflict() {
  git checkout develop
  git pull
  git checkout -
  rm -r node_modules package-lock.json
  npm install
  git commit -m "fix: resolve merge conflict" && git push
}

